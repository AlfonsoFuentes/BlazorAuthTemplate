@page "/suppliers"
@using CllientMudBlazor.Templates
<MudStack Spacing="2">

    <MudStack Row="true">
        <IconButton ToolTip="Add new" Color="Color.Primary" OnClick="Add" Variant="Variant.Outlined" Icon="@Icons.Material.Outlined.Add"></IconButton>

        <MudSpacer></MudSpacer>
        <TextField ValueChanged=OnNameFilter Value="@nameFilter" Placeholder="Search" Adornment="Adornment.Start"
                   AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small" Class="mt-0"></TextField>
    </MudStack>


    <MudGrid>


        @foreach (var item in FilteredItems)
        {
            <MudItem xs="12" sm="3">
                <MudCard>
                    <MudCardHeader>
                        <MudText Typo="Typo.h5"><strong> @item.NickName</strong></MudText>


                    </MudCardHeader>
                    <MudCardContent>
                        <MudText Typo="Typo.body2"><b>Name:</b> @item.Name.Truncate(20)</MudText>
                        <MudText Typo="Typo.body2"><b>Vendor Code:</b> @item.VendorCode</MudText>
                        <MudText Typo="Typo.body2"><b>Tax Code LD: </b>@item.TaxCodeLD</MudText>
                        <MudText Typo="Typo.body2"><b>Tax Code LP:</b> @item.TaxCodeLP</MudText>
                        <MudText Typo="Typo.body2"><b>Contact:</b> @item.ContactName</MudText>
                        <MudText Typo="Typo.body2"><b>Email:</b> @item.ContactEmail</MudText>
                        <MudText Typo="Typo.body2"><b>Phone:</b> @item.PhoneNumber</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <IconButton ToolTip="@($"Edit {item.NickName}")" Color="Color.Info" OnClick="() => Edit(item)" Variant="Variant.Outlined" Icon="@Icons.Material.Outlined.Edit"></IconButton>
                        <IconButton ToolTip="@($"Delete {item.NickName}")" Color="Color.Warning" OnClick="() => Delete(item)" Variant="Variant.Outlined" Icon="@Icons.Material.Outlined.DeleteForever"></IconButton>
                        
                    </MudCardActions>
                </MudCard>
            </MudItem>


        }
    </MudGrid>
</MudStack>
