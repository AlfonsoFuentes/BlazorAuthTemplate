



<GenericItemList TItem="StakeHolderInsideProjectDto"
                 Title="@Title"
                 FilteredItems="FilteredItems"
                 EnableSearch="true"
                 NameFilter="@nameFilter"
                 NameFilterChanged="OnNameFilterChanged"
                 Add="Add"
                 DisableAdd="DisableAddEdit"

                 HideTable="HideTable">

    <CardHeader Context="item">
        <MudText Typo="Typo.subtitle1"><strong>@item.Name</strong></MudText>
    </CardHeader>

    <CardContent Context="item">
        <MudText Typo="Typo.body2"><b>Area:</b> @item.Area</MudText>
        <MudText Typo="Typo.body2"><b>Email:</b> @item.Email</MudText>
        <MudText Typo="Typo.body2"><b>Phone Number: </b>@item.PhoneNumber</MudText>
        <MudText Typo="Typo.body2"><b>Role:</b> @item.Role.Name</MudText>
    </CardContent>

    <CardActions Context="item">

       

        <IconButton ToolTip="@($"Edit {item.Name}")"
                    Color="Color.Info"
                    OnClick="() => Edit(item)"
                    Variant="Variant.Outlined" Disabled="DisableAddEdit"
                    Icon="@Icons.Material.Outlined.Edit" />

        <IconButton ToolTip="@($"Delete {item.Name}")"
                    Color="Color.Warning" Disabled="DisableAddEdit"
                    OnClick="() => Delete(item)"
                    Variant="Variant.Outlined"
                    Icon="@Icons.Material.Outlined.DeleteForever" />
    </CardActions>
</GenericItemList>

@code {
      [Parameter]
    public bool DisableAddEdit { get; set; } = false;

    // 🔹 Filtro gestionado aquí (como querías)

    [Parameter]
    public EventCallback HideTable { get; set; }
    async Task OnHideTable()
    {
        if (HideTable.HasDelegate) await HideTable.InvokeAsync();
    }

   
}